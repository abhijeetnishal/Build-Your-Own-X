{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "main/types/*"]
        }
    },
    "include": ["main/**/*", "server-3/server-3.ts", "server-2/server-2.ts", "server-1/server-1.ts"]
}